<%# cssはapp/assets/stylesheets/devise.cssに記載 %>

<%= render "shares/sub_header" %>

<div class="container devise__form">

<%# -----サブタイトル部分----- %>
  <div class="row justify-content-center form__header">
    <div class="form__header--title">
      <h2>住所登録</h2>
    </div>
  </div>

<%# -----住所登録部分----- %>
  <%= form_with model: @address, class: "registration__main", local: true do |f| %>
  <%= render "shares/error_messages", resource: @address %>

    <div class="row form__area ">
      <div class="form-group col-5">
        <div class="form__label--area">
          <label class="form__label--text">郵便番号</label>
          <span class="form__attention">必須</span>
        </div>
          <%= f.text_field :postal_code, class: "form-control", id: "postal_code", autofocus: true %>
      </div>
    </div>

    <div class="row form__area ">
      <div class="form-group col-5">
        <div class="form__label--area">
          <label class="form__label--text">都道府県</label>
          <span class="form__attention">必須</span>
        </div>
          <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, { include_blank: "--" }, { class: "form-control", id: "prefecture_id" }) %>
      </div>
    </div>

    <div class="row form__area ">
      <div class="form-group col-5">
        <div class="form__label--area">
          <label class="form__label--text">市区町村</label>
          <span class="form__attention">必須</span>
        </div>
          <%= f.text_field :city, class: "form-control", id: "city" %>
      </div>
    </div>

    <div class="row form__area ">
      <div class="form-group col-5">
        <div class="form__label--area">
          <label class="form__label--text">番地</label>
          <span class="form__attention">必須</span>
        </div>
          <%= f.text_field :house_number, class: "form-control", id: "house_number" %>
      </div>
    </div>

    <div class="row form__area ">
      <div class="form-group col-5">
        <div class="form__label--area">
          <label class="form__label--text">建物名</label>
          <span class="form__no__attention">任意</span>
        </div>
          <%= f.text_field :building_number, class: "form-control", id: "building_number" %>
      </div>
    </div>

    <div class="form__btn">
      <%= f.submit "Sign Up", class: "btn btn-outline-primary"%>
    </div>
  <% end %>
</div>

<%= render "/shares/footer_form" %>